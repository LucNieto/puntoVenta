<div class="pull-left">
  <%= form_tag import_companies_path, multipart: true do %>
    <%= file_field_tag :file, class: 'btn btn-default' %>
    <%= submit_tag "Importar", class: 'btn btn-info'%>
  <% end %> 
</div>

<div class="pull-right">
  <%= link_to "Nueva", new_company_path, class: 'btn btn-danger' %>
</div>
<div class="clearfix"></div>
<br />

<% if @companies.blank? %>
  <div class="alert alert-info alert-dismissible mx-auto" role="alert">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
    No existen elementos en la base de datos, favor de crear algunos!!
  </div>
<% else %>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th width="30">ID</th>
        <th width="75">Opciones</th>
        <th>Razon Social</th>
        <th>Sucursal</th>
      </tr>
    </thead>
    <tbody>
      <% @companies.each do |item| %>
        <tr>
          <th><%= item.id %></th>
          <td class="text-center">
            <!-- Boton mostrar -->
            <%= link_to company_path item do %>
              <i class="fa fa-eye text-muted"></i>
            <% end %>
            <!-- Boton editar -->
            <%= link_to edit_company_path item do %>
              <i class="fa fa-pencil text-muted"></i>
            <% end %>
            <!-- Boton eliminar -->
            <%= link_to company_path( item ), method: :delete, data: { confirm: '¿Estas seguro de eliminar este elemento?' } do %>
              <i class="fa fa-trash-o text-muted"></i>
            <% end %>
          </td>
          <td><%= item.bussines_name.nombre %></td>
          <td><%= item.nombre %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
