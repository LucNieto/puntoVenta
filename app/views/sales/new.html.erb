<%= form_tag('/sales/charge', id: 'card-form') do %>
  <span class="card-errors"></span>
  <div>
    <label>
      <span>Nombre del tarjetahabiente</span>
      <input type="text" size="20" data-conekta="card[name]">
    </label>
  </div>
  <div>
    <label>
      <span>Número de tarjeta de crédito</span>
      <input type="text" size="20" data-conekta="card[number]" value="5256782461448790">
    </label>
  </div>
  <div>
    <label>
      <span>CVC</span>
      <input type="text" size="4" data-conekta="card[cvc]" value="321">
    </label>
  </div>
  <div>
    <label>
      <span>Fecha de expiración (MM/AAAA)</span>
      <input type="text" size="2" data-conekta="card[exp_month]" value="05">
    </label>
    <span>/</span>
    <input type="text" size="4" data-conekta="card[exp_year]" value="18">
  </div>
  <button type="submit">Crear token</button>
<% end %>
