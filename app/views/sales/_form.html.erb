<%=  simple_form_for(@sale ) do |f| %>
    <% if sale.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(sale.errors.count, "error") %> prohibited this sale from being saved:</h2>
  
        <ul>
        <% sale.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="form-group row">
    <label class="col-form-label col-lg-3 col-sm-4">Compa√±ia</label>
        <div class="col-lg-9 col-sm-8">
        <%= f.select :company_id, Company.all.map { |u| [u.nombre, u.id ]},{ prompt: '- Seleccionar -' } ,{class:"form-control"}  %>
        </div>
    </div>

    
    <div class="page-header">
     <h4> Detalle de la venta  </h4>
    </div>
    <div class="row">

        <div class="col-xs-6 col-sm-3">
        <h5>Producto</h5>
        </div>

        <div class="col-xs-6 col-sm-2">
          <h5>Cantidad</h5>
        </div>
    
        <div class="col-xs-6 col-sm-3">
          <h5>Precio</h5>
        </div>
    
        <div class="col-xs-6 col-sm-3">
          <h5>Importe</h5>
        </div>

        <div class="col-xs-6 col-sm-1"></div>
    </div>
  <div class="details">   
      <%= f.simple_fields_for :details do |builder| %>
        <%= render 'detail_fields', f: builder %>
      <% end %>

    <div class="form-actions">
      <%= link_to_add_association '<i class="fa fa-plus" aria-hidden="true"></i> Agregar Detalle'.html_safe, f, :details %>
    </div>
    </div>
      
    <div class="form-group row">
    <label class="col-form-label col-lg-3 col-sm-4">Neto</label>
    <div class="col-lg-9 col-sm-8">
      <%= f.text_field :neto, id: :sale_neto , class: "form-control"  %>
    </div>
  </div>
  
  <div class="form-group row">
  <label class="col-form-label col-lg-3 col-sm-4">Neto</label>
  <div class="col-lg-9 col-sm-8">
    <%= f.text_field :neto_iva, id: :sale_neto_iva , class: "form-control"  %>
  </div>
  </div>
  
  <div class="form-group row">
  <label class="col-form-label col-lg-3 col-sm-4">Total compra </label>
  <div class="col-lg-9 col-sm-8">
  <%= f.text_field :total_compra, id: :sale_total_compra , class: "form-control"   %>
  </div>
  </div>
  
  <div class="pull-right">
  <%= f.submit nil, class: "btn btn-primary" %>
  </div>
  <div class="clearfix"></div>
  
  <% end %>
  