<h5 class="text-center text-muted">Detalle de compra</h5>
<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Producto</th>
      <th>Cantidad</th>
      <th>Precio</th>
      <th>Importe</th>
    </tr>
  </thead>

  <tbody>
    <% total_compra = 0 %>
    <% object.details.each do |item| %>
    <tr>
      <td><%= item.product.nombre %></td>
      <td class="text-center"><%= item.cantidad %></td>
      <td class="text-right"><%= money_format( item.product.precio_venta ) %></td>
      <td class="text-right"><%= money_format( item.importe ) %></td>
      <% total_compra += item.importe %>
    </tr>
    <% end %>
    <tr>
      <th colspan="3" class="text-right">Total</th>
      <th><%= money_format(total_compra) %></th>
    </tr>
  </tbody>
</table>
