
<div class="nested-fields">

    <div class="row">
        <div class="col-xs-6 col-sm-2">
            <%= f.input :cantidad,  :input_html => {
                :class => "clase de prueba"
                },label: false %>
        </div>

        <div class="col-xs-6 col-sm-3">
            <%= f.select :product_id, Product.all.map { |u| [u.nombre, u.id ]},{ prompt: '- Seleccionar -'},{class:"form-control"}%>
        </div>

        <div class="col-xs-6 col-sm-3">
            <%= f.input :importe, class:"test2", label: false  %>
        </div>

        <div class="col-xs-6 col-sm-">
            <%= link_to_remove_association "Eliminar", f, class: 'btn btn-primary btn-xs' %>
        </div>

        <div class="col-xs-6 col-sm-2">
        <%= f.label :saldo, class:"saldo" %>
        </div>
        
    </div>
</div>
